@model LoginUser
<h2>Login!</h2>
<hr>
<form asp-action="Login" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="LogEmail"></span>
        <label asp-for="LogEmail"></label>
        <input class="form-control" asp-for="LogEmail">
    </div>
    <div class="form-group">
        <span asp-validation-for="LogPassword"></span>
        <label asp-for="LogPassword"></label>
        <input class="form-control" asp-for="LogPassword">
    </div>
    <button>Login!</button>
</form>